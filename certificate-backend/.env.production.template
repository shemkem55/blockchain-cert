# ==================================
# BLOCKCHAIN CERTIFICATE SYSTEM
# Production Environment Template
# ==================================
# ⚠️ SECURITY WARNING: 
# - Copy this to .env for production
# - NEVER commit .env to version control
# - Generate new secrets for production
# - Rotate credentials regularly
# ==================================

# Application Environment
NODE_ENV=production
PORT=3000

# Security - JWT Configuration
# CRITICAL: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_MINIMUM_64_CHARACTERS_LONG
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_64_CHARACTERS

# Database Type
# Options: sqlite, mariadb
DB_TYPE=sqlite

# MariaDB Configuration (if using mariadb)
DB_HOST=localhost
DB_PORT=3306
DB_USER=certuser
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_NAME=certificate_system

# Email Configuration (for OTP)
# Use app-specific password for Gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
FORCE_SHOW_OTP=false

# Admin Configuration
# CRITICAL: Change these credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_TO_VERY_STRONG_PASSWORD

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-production-google-client-id

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
BLOCKCHAIN_ADMIN_PRIVATE_KEY=CHANGE_THIS_TO_SECURE_PRIVATE_KEY

# CORS Origins (comma-separated production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Management
SESSION_TIMEOUT_MINUTES=30
JWT_REFRESH_EXPIRE=30d

# Data Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=CHANGE_THIS_TO_32_BYTE_HEX_STRING

# Security Features
ENABLE_CSRF_PROTECTION=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=true

# Debug (disable in production)
DEBUG=false
