{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/auth/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/auth/:path*"
        },
        {
            "source": "/certificates/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/certificates/:path*"
        },
        {
            "source": "/ai/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/ai/:path*"
        },
        {
            "source": "/feedback/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/feedback/:path*"
        },
        {
            "source": "/admin/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/admin/:path*"
        },
        {
            "source": "/employer/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/employer/:path*"
        },
        {
            "source": "/registrar/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/registrar/:path*"
        },
        {
            "source": "/student/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/student/:path*"
        },
        {
            "source": "/health",
            "destination": "https://blockchain-cert-backend.onrender.com/health"
        },
        {
            "source": "/uploads/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/uploads/:path*"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}