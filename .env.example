# ==================================
# BLOCKCHAIN CERTIFICATE SYSTEM
# Environment Variables Configuration
# ==================================

# Application Environment
NODE_ENV=development
PORT=3000

# Security - JWT Configuration
# IMPORTANT: Change this to a strong random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production

# Database Type
# Options: mariadb, sqlite
DB_TYPE=sqlite

# MariaDB Configuration (if using mariadb)
DB_HOST=localhost
DB_USER=certuser
DB_PASSWORD=your-secure-password
DB_NAME=certificate_system

# Email Configuration (for OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
BLOCKCHAIN_NETWORK_ID=31337
ADMIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:8080,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug Options
FORCE_SHOW_OTP=false
DEBUG=false

# Session Management
SESSION_TIMEOUT_MINUTES=30
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Data Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=<32-byte-hex-string-change-in-production>

# Security Features
ENABLE_CSRF_PROTECTION=true
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=true

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
