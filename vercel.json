{
    "buildCommand": "cd 'frontend v2' && npm install && npm run build",
    "outputDirectory": "frontend v2/dist",
    "rewrites": [
        {
            "source": "/auth/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/auth/:path*"
        },
        {
            "source": "/certificates/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/certificates/:path*"
        },
        {
            "source": "/api/:path*",
            "destination": "https://blockchain-cert-backend.onrender.com/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}